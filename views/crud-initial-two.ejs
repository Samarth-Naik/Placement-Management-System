<body>
    <div class="login-main container-fluid">

        <div class="login-inner-main-container row">

            <div class="col-sm-6 login-form-main-container">

                <div class="login-form-inner-main-container">

                    <h1 class="login-header login-h1-one" style="border-bottom: 6px solid <%=auth_color%>;">Admin</h1>
                    <form action="/login-authenticate" method="post" class="login-form">

                        <div class="input-group mb-3">
                            <input type="text" class="form-control login-uname" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" name="uname" style="border: 0;" autocomplete="off">
                          </div>

                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="pword" style="border: 0;">
                          </div>

                          <button type="submit" class="btn btn-primary login-btn" name="log" value="login">Log In</button>

                          <button type="submit" class="btn btn-primary logout-btn" name="log" value="logout">Log Out</button>

                        </form>   
                </div>

            </div>

            <div class="col-sm-6 crud-initial-main-container">

                <div class="row crud-initial-inner-main-container">
                    <div class="crud-initial-request-container">
                        <h1 class="crud-initial-header">Job_Seeker</h1>
                        <form action="/crud_seeker" class="crud-initial-form" method="get">
                            <button type="submit" class="btn btn-dark crud-initial-btn">CRUD Ops</button>
                        </form>
                    </div>
                </div>

                <div class="row crud-initial-inner-main-container">
                    <div class="crud-initial-request-container">
                        <h1 class="crud-initial-header">Job_Provider</h1>
                        <form action="/crud_provider" class="crud-initial-form" method="get">
                            <button type="submit" class="btn btn-dark crud-initial-btn">CRUD Ops</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <h1 class="crud-init-footer-header"> S & P Â© 2 0 2 2</h1>

    </div>

</body>
</html>