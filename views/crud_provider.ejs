<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>crud_provider</title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link rel="stylesheet" href="/style.css">
</head>
<body>

    <div class="crud-main">
        <div class="crud-second-row row">
            <div class="crud-second-col col col-12 crud-col">

                    <div class="final-table-main-container">
                        <table class="table table-success table-striped final-table" style="min-height: 50%; max-width: 55%;">
                            <th>JOB ID</th><th>JOB DESIGNATION</th><th>SKILL REQUIRED</th><th>CGPA REQUIRED</th>
                            <% records.forEach((element)=>{ %>
                                <tr>
                            <td class="table-dark"><%= element.job_no %></td>
                            <td class="table-dark"><%= element.job_designation %></td>
                            <td class="table-dark"><%= element.skill_req %></td>
                            <td class="table-dark"><%= element.cgpa_req %></td>
                            </tr>
                            <%  }) %>
                        </table>
                    </div>

            </div>
        </div>
        <div class="crud-first-row row">
            <div class="crud-left-col col col-4 crud-col">
                <form action="/crud_initial" method="get">
                    <button type="submit" class="btn btn-outline-dark request-go-back">Go Back</button>
                </form>
                <form action="ops/provider/insert" method="post" class="insert-form">
                    <input class="form-inputs" type="number" name="jid" id="" placeholder="Job ID" >
                    <input class="form-inputs" type="text" name="jname" id="" placeholder="Job Designation" >
                    <input class="form-inputs" type="text" name="jskill" id="" placeholder="Skill Required">
                    <input class="form-inputs" type="number" name="jcgpa" id="" placeholder="CGPA Required" step="0.1" min="0" max="10" value="0">
                    <button id="inst" type="submit" class="btn btn-success seeker-btn">Insert</button>
                </form>
            </div>
            <div class="crud-mid-col col col-4 crud-col">
                <!-- <h1 class="crud-delete-header">provider</h1> -->
                <form action="ops/provider/delete" method="post" class="delete-form">
                    <input type="number" name="jid" id="" placeholder="Enter Job ID to Delete">
                    <button id="del" type="submit" class="btn btn-danger seeker-btn">Delete</button>
                </form>
                <form action="/finallist" method="post">
                    <button type="submit" id="flt" class="btn btn-warning filter-btn">Generate Result</button>
                </form>
            </div>
            <div class="crud-right-col col col-4 crud-col">
                <form action="ops/provider/update" method="post" class="update-form">
                    <input class="form-inputs" type="number" name="jid" id="" placeholder="Job ID" >
                    <input class="form-inputs" type="text" name="jname" id="" placeholder="Job Designation" >
                    <input class="form-inputs" type="text" name="jskill" id="" placeholder="Skill Required">
                    <input class="form-inputs" type="number" name="jcgpa" id="" placeholder="CGPA Required" step="0.1" min="0" max="10" value="0">
                    <button id="updt" type="submit" class="btn btn-primary seeker-btn">Update</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>